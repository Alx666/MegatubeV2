@model IEnumerable<MegatubeV2.User>
@if (Model.Count() > 0)
{
    <div class="row">
        <div class="col-md-6 col-sm-6 col-xs-6">

            <div class="page-header">
                <h2 class="m-b-2 m-t-0 f-w-300"><i class="fa fa-users" aria-hidden="true"></i>User's administrated users</h2>
            </div>
            <table class="table table-condensed table-hover table-striped" id="administratedUsersTable">
                <thead>
                    <tr>
                        <th class="userDetails">
                            User name
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="v-a-m">
                                    <span class="text-white"><a href="@Url.Action("Details", "Users", new { id = item.Id })">@(item.LastName + " " + item.Name)</a></span>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
            <hr />

        </div>
    </div>
                        }
