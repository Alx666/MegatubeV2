@model IEnumerable<MegatubeV2.ViewChannel>

@{
    ViewBag.Title = "Index";
}

<script src="~/assets/vendor/js/jquery.dataTables.min.js"></script>
<script src="~/assets/vendor/js/dataTables.bootstrap.min.js"></script>

<script language="javascript">

    $(document).ready(function () {
        $('#userTable').DataTable();
    });
</script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed table-hover table-striped" id="userTable">
    <thead>
        <tr>
            <th class="small text-muted text-uppercase">
                <strong>
                    @Html.DisplayNameFor(model => model.Id)
                </strong>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OwnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecruiterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentOwner)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentRecruiter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PercentMegatube)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LatestActivity)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @{
                        string sUrl = "https://www.youtube.com/channel/UC" + item.Id;

                        if (item.IsActive)
                        {
                            <a href="@sUrl" target="_blank">@item.Id</a>
                        }
                        else
                        {
                            <a href="@sUrl" target="_blank" class="text-gray-dark">@item.Id</a>
                        }
                    }
                </td>
                <td class="text-mint-green">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OwnerName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RecruiterName)
                </td>
                <td>
                    @item.RegistrationDate.ToShortDateString()
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentOwner)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentRecruiter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PercentMegatube)
                </td>
                <td>
                    @if (item.IsActive)
                    {
                        <p>Active</p>
                    }
                    else
                    {
                        <p>M.I.A.</p>
                    }                    
                </td>
                <td>
                    @item.LatestActivity.ToShortDateString()
                </td>
                <td nowrap="nowrap">
                    <a title="Edit" class="btn btn-default text-primary btn-sm action-button" href="@Url.Action("Edit",new { Id = item.Id })"><i class="glyphicon glyphicon-pencil"></i></a>
                    <a title="Details" class="btn btn-default text-danger btn-sm action-button" href="@Url.Action("Details",new { Id = item.Id })"><i class="glyphicon glyphicon-arrow-right"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

