@model IEnumerable<MegatubeV2.ViewNote>

<div class="col-lg-6">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-xs-6">
            <h5 class="m-b-0 m-t-0 f-w-300">Notes</h5>
        </div>
        <div class="col-md-4 col-sm-4 col-xs-offset-2 col-sm-offset-4 col-md-offset-4 text-right">
            <button type="button" class="btn btn-sm btn-default">See All<i class="fa m-l-1 fa-angle-right"></i> </button>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th class="small text-muted text-uppercase">
                </th>
            </tr>
        </thead>
        <tbody>
            @{ 
                foreach(var item in Model)
                {
                    <tr>
                        <td>
                            <div class="media media-auto">
                                <div class="media-left">
                                    <a href="javascript: void(0)">
                                        <img class="media-object img-circle" style="width: 35px" src="https://s3.amazonaws.com/uifaces/faces/twitter/kiwiupover/128.jpg" alt="Avatar">
                                    </a>
                                </div>
                                <div class="media-body">
                                    <span class="media-heading text-white">@item.AuthorName</span>
                                    <br>
                                    <span class="media-heading">
                                        <span>on @item.Date.ToShortDateString()</span>
                                    </span>
                                    <p class="m-t-2 m-b-0"><span>@item.Text</span></p>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }

            

        </tbody>
    </table>
</div>