
@{

}


@using (Html.BeginForm("UploadChannels", "Csv", FormMethod.Post, new { @class = "m-t-3", id = "uploadForm" }))
{
    <div class="form-group">
        <div class="col-lg-3">
            <fieldset>                
                    <label>Select list</label>
                    <select id="myList">
                        <option value="1">Load Channels</option>
                        <option value="2">Load Monetary Data</option>
                        <option value="3">Load Superchat Data</option>
                    </select>
            </fieldset>            
        </div>
        <div class="col-lg-3">
            <input class="form-control" type="text" name="channelsConversion" size="40" placeholder="Dollar To Euro Change" />
        </div>
        <div class="col-lg-3">
            <input class="form-control" type="file" name="channelsFile" size="40" placeholder="Load Channels" />
        </div>        
        <div class="col-lg-3">
            <a href="javasctipt:{}" onclick="document.getElementById('uploadForm').submit(); return false;" role="button" class="btn btn-block m-b-2 btn-primary">Upload</a>
        </div>                      
    </div>
}
    

 